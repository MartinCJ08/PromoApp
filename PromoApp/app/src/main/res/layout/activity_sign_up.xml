<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="40dp"
    android:id="@+id/signup_view"
    android:background="@drawable/gradient_list_1"
    tools:context=".Activities.SignupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Fill all the fields with your information to create an account."/>
    <EditText
        android:id="@+id/etxtEmailSign"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:height="60dp"
        android:textSize="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etxtPassSign"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:height="60dp"
        android:hint="Contraseña"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etxtPassSign2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="16dp"
        android:height="60dp"
        android:hint="Confirma contraseña"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Your password must have at least 7 characters and at least 1 number"/>

    <EditText
        android:id="@+id/etxtNomSign"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:height="60dp"
        android:hint="Nombre"/>

    <EditText
        android:id="@+id/etxtApeSign"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:height="60dp"
        android:hint="Apellido"/>

    <EditText
        android:id="@+id/etxtPhoneSign"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:height="60dp"
        android:layout_height="60dp"
        android:hint="Telefono"
        android:inputType="number"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/btnSignReg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:layout_gravity="center">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:textColor="#fff"
                      android:textSize="20dp"
                      android:text="@string/sign_up"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>